{
	"name": "luistar15/lustra",
	"type": "library",
	"description": "PHP minimalistic framework",
	"keywords": [
		"micro",
		"minimalistic",
		"framework"
	],
	"homepage": "https://github.com/luistar15/lustra",
	"license": "MIT",
	"authors": [
		{
			"name": "Luis Tar Quince",
			"email": "luistar15@hotmail.com",
			"homepage": "https://github.com/luistar15"
		}
	],
	"require": {
		"php": "^8.1"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.10",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"wptrt/wpthemereview": "^0.2"
	},
	"autoload": {
		"psr-4": {
			"Lustra\\": "src\\Lustra"
		}
	},
	"scripts": {
		"analyze": "./vendor/bin/phpstan analyze -l 7 -c ./.phpstan/config.neon src",
		"standards:check": "./vendor/bin/phpcs --standard=./.phpcs/ruleset.xml",
		"standards:fix": "./vendor/bin/phpcbf --standard=./.phpcs/ruleset.xml"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
