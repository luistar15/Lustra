{
	"name": "luistar15/lustra",
	"type": "library",
	"description": "PHP minimalistic framework",
	"keywords": ["micro", "minimalistic", "framework"],
	"homepage": "https://github.com/luistar15/lustra",
	"license": "MIT",
	"authors": [
		{
			"name": "Luis Tar Quince",
			"email": "luistar15@hotmail.com",
			"homepage": "https://github.com/luistar15"
		}
	],
	"require": {
		"php" : ">=7.4"
	},
	"require-dev": {
		"phpunit/phpunit" : "^8",
		"phan/phan": "^2.4",
		"phpstan/phpstan": "^0.12"
	},
	"autoload": {
		"psr-4": {
			"Lustra\\": "src\\Lustra"
		}
	},
	"scripts": {
		"analyze-phan": "phan --config-file ./.phan/config.php",
		"analyze-phpstan": "phpstan analyze -l 7 -c ./.phpstan/config.neon src"
	}
}
